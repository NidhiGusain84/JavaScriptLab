
@{
    ViewData["Title"] = "GetForm";
}

<style>
    .warning {
        font-weight: bold;
        color: red;
    }
</style>

<h1>GetForm</h1>

<div id="message" class="warning"></div>


<form id="myform" method="post" action="/home/useform">
    <label>First Name</label><input type="text" id="FirstName" name="FirstName" /><span class="warning" id="FirstNameW"></span><br />
    <label>Last Name</label><input type="text" id="LastName" name="LastName" /><span class="warning" id="LastNameW"></span><br />
    <label>Email</label><input type="email" id="Email" name="Email" /><span class="warning" id="EmailW"></span><br />
    <label>Password </label><input type="password" id="Password" name="Password" /><span class="warning" id="PasswordW"></span><br />
    <label>Confirm Password</label><input type="password" id="ConfirmPassword" name="ConfirmPassword" /><span></span><br />

</form>

<button id="mybutton">Submit</button>


<script>

    let myform = document.querySelector('#myform')

    function validateForm() {
        let firstName = document.querySelector('#FirstName').value;
        let lastName = document.querySelector('#LastName').value;
        let email = document.querySelector("#Email").value;
        let password = document.querySelector('#Password').value;
        let cpassword = document.querySelector('#ConfirmPassword').value;

        let result = true;
        if (password != cpassword) {
            document.querySelector('#PasswordW').innerHTML = 'Passwords do not match';
            result = false;
        }
        if (email.indexOf('.') == -1 || email.indexOf('@@' == -1)) {
            document.querySelector('#EmailW').innerHTML = 'Email must contain an @@ and a.';
        }
        if (firstName.length < 2) {
            document.querySelector('#FirstNameW').innerHTML = 'First name must have at least two characters';
            result = false;
        }
        if (lastName.length < 2) {
            document.querySelector('#LastNameW').innerHTML = 'Last name must have at least two characters';
            result = false;
        }
        return result;
    }

    myform.addEventListener('click', function (event) {
        if (validateForm() == false) {
            console.log('Validation failed, skipping submit');
            event.preventDefault();
        }
    });

    function clearMessage() {
        document.querySelector('#message').innerText = '';
    }

    let t1 = document.querySelector('#FirstName');
    t1.addEventListener('keypress', clearMessage);

    let t1 = document.querySelector('#LastName');
    t1.addEventListener('keypress', clearMessage);

    let t1 = document.querySelector('#Email');
    t1.addEventListener('keypress', clearMessage);

    let t1 = document.querySelector('#Password');
    t1.addEventListener('keypress', clearMessage);

    let t1 = document.querySelector('#ConfirmPassword');
    t1.addEventListener('keypress', clearMessage);


</script>